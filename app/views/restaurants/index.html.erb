<div class="container">
  <h1 class="text-center my-4">Tous les restaurants</h1>

  <ul class="list-group mb-4">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item">
        <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Homepage", root_path, class: "btn btn-primary mb-4" %>

  <div data-controller="toggle" class="mt-5">
    <button data-action="click->toggle#fire" class="btn btn-outline-primary mb-3">Ajouter un nouveau restaurant</button>
    <div data-toggle-target="togglableElement" class="d-none">
      <%= render "form", restaurant: @restaurant %>
    </div>
  </div>
</div>
